{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "react": [
        "../node_modules/@types/react"
      ],
      "lib/*": [
        "lib/*"
      ],
      "components/*": [
        "components/*"
      ],
      "middlewares/*": [
        "lib/middlewares/*"
      ],
      "dialogs/*": [
        "components/dialogs/*"
      ],
      "hooks/*": [
        "hooks/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "avalanche.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "/data/Dev/avalanche-wrapper/bundle/types/**/*.ts",
    "/data/Dev/avalanche-wrapper/avalanche/bundle/types/**/*.ts",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "**/._*.*"
  ]
}
