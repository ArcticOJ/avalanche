{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "lib/*": [
        "lib/*"
      ],
      "components/*": [
        "components/*"
      ],
      "middlewares/*": [
        "lib/middlewares/*"
      ],
      "dialogs/*": [
        "components/dialogs/*"
      ],
      "hooks/*": [
        "hooks/*"
      ]
    },
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "avalanche.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "public",
    "**/._*.*"
  ]
}
